<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - RezervacijaSmjestaja</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/RezervacijaSmjestaja.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <!-- Skroz lijevo: Rezervacija smještaja -->
                <a class="navbar-brand" asp-area="" asp-controller="Smjestaj" asp-action="Index">RezervacijaSmjestaja</a>

                <!-- Pored: Naslovna i Moje rezervacije s minimalnim razmakom -->
                <ul class="navbar-nav ms-3">
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Smjestaj" asp-action="Index">Naslovna</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" asp-controller="Rezervacija" asp-action="MojeRezervacije">Moje rezervacije</a>
                    </li>
                </ul>

                <!-- Skroz desno: Odjava -->
                <ul class="navbar-nav ms-auto">
                    <li class="nav-item">
                        <a class="nav-link text-danger" asp-controller="Account" asp-action="Logout">Odjava</a>
                    </li>
                </ul>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2025 - RezervacijaSmjestaja - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>